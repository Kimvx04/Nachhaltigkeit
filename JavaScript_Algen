document.addEventListener('DOMContentLoaded', () => {
    const products = [
        { img: 'tshirt.jpg', name: 'T-Shirt', price: '19,99 €' },
        { img: 'pullover.jpg', name: 'Pullover', price: '39,99 €' },
        { img: 'hose.jpg', name: 'Hose', price: '29,99 €' },
        { img: 'jacke.jpg', name: 'Jacke', price: '49,99 €' }
    ];

    const productsPerPage = 3;
    let currentPage = 1;

    const renderProducts = () => {
        const productContainer = document.querySelector('.bestseller');
        productContainer.innerHTML = `<h2>Unsere Bestseller</h2>`;

        const start = (currentPage - 1) * productsPerPage;
        const end = start + productsPerPage;
        const currentProducts = products.slice(start, end);

        currentProducts.forEach(product => {
            const productDiv = document.createElement('div');
            productDiv.className = 'product';
            productDiv.innerHTML = `
                <img src="${product.img}" alt="${product.name}">
                <p>${product.name}</p>
                <p>${product.price}</p>
            `;
            productContainer.appendChild(productDiv);
        });

        // Pagination
        const pagination = document.createElement('div');
        pagination.className = 'pagination';
        pagination.innerHTML = `
            <span class="prev">&laquo;</span>
            <span>${currentPage}</span>
            <span class="next">&raquo;</span>
        `;
        productContainer.appendChild(pagination);

        // Pagination Click Events
        document.querySelector('.prev').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                renderProducts();
            }
        });
        document.querySelector('.next').addEventListener('click', () => {
            if (currentPage < Math.ceil(products.length / productsPerPage)) {
                currentPage++;
                renderProducts();
            }
        });
    };

    renderProducts();

    // Warenkorb Float-Button Click Event
    const floatCart = document.createElement('div');
    floatCart.className = 'float-cart';
    floatCart.innerHTML = '&#128722;'; // Einkaufswagen-Icon
    document.body.appendChild(floatCart);

    floatCart.addEventListener('click', () => {
        alert('Warenkorb öffnen (noch nicht implementiert)');
    });
});
